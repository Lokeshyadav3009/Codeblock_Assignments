<%- include("./partials/navbar")%>
<%- include("./partials/header")%>

    
<main class="container" style="margin-top:3rem;width:100vw">
    
    <section>
        <h4 class="display-4 text-center"><strong><i class="fab fa-blogger"></i> All Blogs</strong></h4>
    </section>

    <div class="row blogs">
        <%for(let blog of blogs){%>
            <div class="mb-3">
                <div class="card  m-3" style="width: 80vw;">
                    <img src="<%=blog.img%>" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="card-title">
                            <strong>Author: </strong> <%=blog.author%>
                        </h5>
                        <p class="card-text" style="text-align: justify;">
                            <%=blog.desc%>
                        </p>
                        <a href="/blogs/<%=blog._id%>" class="btn btn-outline-primary">More Info</a>
                    </div>
                </div>
            </div>
            <% }%>
    </div>

</main>

   
<%- include("./partials/footer")%>